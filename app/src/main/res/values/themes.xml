<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.GameBillerTV" parent="Theme.Leanback">
        <item name="android:colorPrimary">#1E1E1E</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="android:colorAccent">#2196F3</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Fullscreen theme for lock screen -->
    <style name="Theme.GameBillerTV.Fullscreen" parent="Theme.GameBillerTV">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>
